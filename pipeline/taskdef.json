{
  "family": "gallery-task",
  "executionRoleArn": "arn:aws:iam::124355655853:role/wk5-gallery-ecs-role",
  "taskRoleArn": "arn:aws:iam::124355655853:role/wk5-gallery-ecs-role",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "gallery-container",
      "image": "124355655853.dkr.ecr.eu-west-1.amazonaws.com/wk5-gallery-app:latest",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "http"
        }
      ],
      "environment": [
        {
            "name": "AWS_REGION",
            "value": "eu-west-1"
        },
        {
            "name": "S3_BUCKET_NAME",
            "value": "week5-image-upload"
        },
        {
            "name": "PORT",
            "value": "8080"
        },
        {
            "name": "GIN_MODE",
            "value": "release"
        }
      ],
      "secrets": [
            {
            "name": "S3_ACCESS_KEY",
            "valueFrom": "arn:aws:ssm:eu-west-1:124355655853:parameter/wk5-gallery-app/access-key"
        },
        {
            "name": "S3_SECRET_KEY",
            "valueFrom": "arn:aws:ssm:eu-west-1:124355655853:parameter/wk5-gallery-app/secret-key"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/gallery",
          "awslogs-region": "eu-west-1",
          "awslogs-create-group": "true",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:80 || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}